@model IEnumerable<MvcIdentityRolesEmpleados.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<h1>Empleados</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th><h6><strong>Acciones</strong></h6></th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oficio)
            </td>
            <td>
                <a asp-controller="Empleados" asp-action="Details" asp-route-id="@item.IdEmpleado" class="btn btn-info">Detalles</a>
            </td>
        </tr>
}
    </tbody>
</table>
